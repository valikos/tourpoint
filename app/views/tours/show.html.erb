<%- model_class = Tour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="row-fluid">
  <div class="span5">
    <%= gmaps(
      :map_options => { :container_class => "tour_map_container", :id => "map", :class => "tour_map" },
      :markers => { :data => @markers, :options => { :draggable => false } },
      :polylines => { :data => @polylines, :options => { :strokeColor => "#000" } }
    ) %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tour_path(@tour), :class => 'btn' %>
  </div>
  <div class="span7">
    <div class="pull-right span4 well">
      <p><%= @tour.start_date %></p>
      <p><%= @tour.end_date %></p>
      <p><%= number_to_currency(@tour.price) %></p>
    </div>
    <p><%= @tour.title %></p>
    <p><%= @tour.description %></p>
    <p>Itenerary</p>
    <% @locations.each do |location| %>
      <p>
        <span class="lead"><%= location.title %></span><br />
        <%= location.description %>
      </p>
    <% end %>
  </div>
</div>


