<%- model_class = Tour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Start date</th>
      <th>End date</th>
      <th style="width:242px">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= link_to tour.title, tour_path(tour) %></td>
        <td><%= tour.description %></td>
        <td><%= tour.price %></td>
        <td><%= tour.start_date %></td>
        <td><%= tour.end_date %></td>
        <td>
          <div>
            <%= link_to 'Edit locations', new_tour_location_path(tour), class: 'btn btn-mini btn-info' %>
            <%= link_to 'Edit tour datails',
                        edit_tour_path(tour), :class => 'btn btn-mini' %>
            <%= link_to 'Delete tour',
                        tour_path(tour),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New tour',
            new_tour_path,
            :class => 'btn btn-primary' %>
