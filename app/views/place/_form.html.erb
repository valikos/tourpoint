<%= form_for(:places, url: place_path, remote: true, html: { id: 'place_location', class: 'form-inline' } ) do |f| %>
  <div>
    <%= f.text_field :location, class: 'text_field span8', placeholder: 'Enter location name or address' %>
    <%= f.submit 'Locate on map', class: 'btn btn-success span4 pull-right' %>
  </div>
<% end %>
