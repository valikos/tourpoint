<%= content_tag_for :tr, location do %>
  <td><%= location.order %></td>
  <td>
    <strong><%= location.title %></strong><br />
    <%= location.description %>
  </td>
  <td>
    <%= button_to 'Remove', tour_location_path(tour_id: params["tour_id"], id: location.id),
      class: 'btn btn-inverse remove-location', method: :delete, remote: true, confirm: 'Remove this itinerary?' %>
  </td>
  <td>
    <span class="drag-handle icon-move"></span>
  </td>
<% end %>